@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Login WarungKu</h2>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <form method="post" asp-controller="User" asp-action="Login">

                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" name="username" class="form-control" required />
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" name="password" class="form-control" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Masuk</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3 p-3 border rounded bg-light">
                <p class="mb-1 fw-bold text-muted small">
                    <i class="bi bi-info-circle-fill me-1"></i> Informasi Login
                </p>
                <p class="mb-0 small">
                    Gunakan kredensial berikut untuk menguji aplikasi:
                </p>
                <code class="d-block mt-2">
                    User: **admin** | Pass: **123456**
                </code>
            </div>

            <p class="text-center text-muted mt-3">Sistem Point of Sale WarungKu</p>

        </div>
    </div>
</div>